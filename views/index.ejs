<!DOCTYPE html>
<html lang="en">

<%- include('pHead')%>

<body>

    <%- include('pNav') %>
    
    <div class="blogs content">
        
            <h2>Entries</h2>
        <% if (blogs.length > 0) {%>
        <% blogs.forEach((blog) =>{ %>

        <a class="single" href="/blogs/<%= blog._id %>">
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
        </a>

        <% }) %>
        <% } else { %>

            <h2> There are no blogs to display </h2>

        <% } %>

    </div>

    <%- include('pFooter') %>

</body>
</html>